{
  "env": {
    "node": true
  },
  "plugins": ["eslint-plugin-tsdoc"],
  "extends": [
    "plugin:@shopify/typescript",
    "plugin:@shopify/typescript-type-checking"
  ],
  "parserOptions": {
    "project": "tsconfig.json"
  },
  "rules": {
    "tsdoc/syntax": "warn"
  },
  "ignorePatterns": [
    "dist/*",
    "lib/*",
    "build/*",
    "prebuild/*",
    "externals"
  ]
}
